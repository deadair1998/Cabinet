.wrapper_with_padding
    #doc_show
        %h1.title= @doc.title 
        %p=  simple_format(@doc.content )
        .buttons
            =link_to "Fix doc" , edit_doc_path, class: "button"
            =link_to "Delete" , doc_path(@doc), method: :delete, data: {confirm:"Do you want to delete #{@doc.title}  ?"}, class: "button"
